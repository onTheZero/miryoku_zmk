#define KEYS_L 10 11 12 13 14 20 21 32 33 34 
#define KEYS_R 15 16 17 18 19 28 29 35 36 37
#define IDLE_MS 150
#define QUICK_MS 175
#define TAP_MS 280
/ {
  behaviors {
    r_mt: r_mt {
      //compatible = "zmk,behavior-hold-tap";
      #binding-cells = <2>;
      tapping-term-ms = <TAP_MS>;
      flavor = "balanced";
      bindings = <&kp>, <&kp>;
      quick-tap-ms = <QUICK_MS>;
      require-prior-idle-ms = <IDLE_MS>;
      hold-trigger-key-positions = <KEYS_L>;
      hold-trigger-on-release;
    };

    l_mt: l_mt {
      //compatible = "zmk,behavior-hold-tap";
      #binding-cells = <2>;
      tapping-term-ms = <TAP_MS>;
      flavor = "balanced";
      bindings = <&kp>, <&kp>;
      quick-tap-ms = <QUICK_MS>;
      require-prior-idle-ms = <IDLE_MS>;
      hold-trigger-key-positions = <KEYS_R>;
      hold-trigger-on-release;
    };

    u_lt: u_lt {
      compatible = "zmk,behavior-hold-tap";
      #binding-cells = <2>;
      tapping-term-ms = <U_TAPPING_TERM>;
      flavor = "tap-preferred";
      bindings = <&mo>, <&kp>;
    };
  };
};
